<div id="<%= dom_id ingredient %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Name:</strong>
    <%= ingredient.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Category:</strong>
    <%= ingredient.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Description:</strong>
    <%= ingredient.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Notes:</strong>
    <%= ingredient.notes %>
  </div>
</div>
